<section id="videoSectionCase" class="section section-bottom{% if section.background_sezione_testo_slider == 'grey' %} bg_grey_light{% endif %}">
		<div class="container">
			<div class="row">
					<div class="col-lg-12 text-center">
              {% if section.categoria_sezione|length %}
							   <span class="label-case">{{ section.categoria_sezione }}</span>
              {% endif %}
              {% if section.titolo_sezione_testo_slider|length %}
							   <h2 class="mb-4 title-section-case">{{ section.titolo_sezione_testo_slider }}</h2>
              {% endif %}
              {% if section.testo_sezione_testo_slider|length %}
							    <div class="mb-5">{{ section.testo_sezione_testo_slider }}</div>
              {% endif %}
							<div id="sliderVideo{{ index }}" class="carousel slide slide-video" data-ride="carousel">
							  <ol class="carousel-indicators">
                  {% set count = 0 %}
									{% if section.slider_testo_video|length > 1 %}
		                  {% for slide in section.slider_testo_video %}
													<li data-target="#sliderVideo{{ index }}" data-slide-to="{{ count }}" class="{% if count == 0 %}active{% endif %}"></li>
		                      {% set count = count + 1 %}
		                  {% endfor %}
									{% endif %}
							  </ol>
							  <div class="carousel-inner">
                  {% for slide in section.slider_testo_video %}
								<div class="carousel-item{% if loop.index == 1 %} active{% endif %} text-center">
                      {% if slide.inserisci_testo_slider == 'video' %}
											    <iframe src="{{ slide.video_testo_slider }}?enablejsapi=1&version=3&playerapiid=ytplayer" frameborder="0" allowfullscreen></iframe>
                      {% elseif slide.inserisci_testo_slider == 'immagine' %}
										<img class="{% if slide.immagine_testo_slider.width > 1110 %}w-100{% endif %}" src="{{ slide.immagine_testo_slider.url }}" title="{{ slide.immagine_testo_slider.title }}">
                      {% endif %}
							    </div>
                  {% endfor %}
							  </div>
							</div>
					</div>
			</div>
		</div>
</section>
